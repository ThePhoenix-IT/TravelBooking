<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thephoenix_it.travelbooking">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration" />
        <activity
            android:name=".views.agence.CreerVolActivity"
            android:label="@string/title_activity_creer_vol"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.admin.GererClientActivity"
            android:label="@string/title_activity_gerer_client"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.client.ListVolsActivity"
            android:label="@string/title_activity_list_vols"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.client.ListReservationActivity"
            android:label="@string/title_activity_list_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.agence.ListVolActivity"
            android:label="@string/title_activity_list_vol"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.client.CreerReservActivity"
            android:label="@string/title_activity_creer_reserv"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.client.CompteClientActivity"
            android:label="@string/title_activity_compte_client"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.agence.CompteAgenceActivity"
            android:label="@string/title_activity_compte_agence"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>