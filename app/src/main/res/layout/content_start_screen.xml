<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thephoenix_it.travelbooking.StartScreenActivity"
    tools:showIn="@layout/activity_start_screen">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/compte_utilisateur" />

        <Button
            android:id="@+id/btn_visiteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/visiteur" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
